<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drink_img"
        android:layout_width="@dimen/cocktail_item_image_view_layout_height"
        android:layout_height="@dimen/cocktail_item_image_view_layout_width"
        android:layout_marginStart="@dimen/cocktail_item_image_view_layout_margin_start"
        android:layout_marginTop="@dimen/cocktail_item_image_view_layout_margin_top"
        android:layout_marginBottom="@dimen/cocktail_item_image_view_layout_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/drink_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cocktail_item_text_view_layout_margin_start"
        android:text="TextView"
        android:textSize="@dimen/cocktail_item_text_view_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/drink_img"
        app:layout_constraintStart_toEndOf="@+id/drink_img"
        app:layout_constraintTop_toTopOf="@+id/drink_img" />
</androidx.constraintlayout.widget.ConstraintLayout>